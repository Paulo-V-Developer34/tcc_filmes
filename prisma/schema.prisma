generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model filme {
  id String @id @default(cuid())
  title String
  content String
  image String //vou ter que ver como posso colocar um arquivo aqui
  autor String
}

model user {
  id String @id @default(cuid())
  name String
  gmail String
  image String //vou ter que ver como posso colocar um arquivo aqui
}
