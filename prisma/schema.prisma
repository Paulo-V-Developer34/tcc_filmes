generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model filme {
  id        String  @id @default(cuid())
  title     String
  content   String
  image     String? //vou ter que ver como posso colocar um arquivo aqui
  autorname String
  slug      String  @unique

  Autor   User   @relation(fields: [autorID], references: [id])
  autorID String

  @@index([slug])
}

model User {
  id    String  @id @default(cuid())
  name  String  @unique
  gmail String
  image String? //vou ter que ver como posso colocar um arquivo aqui

  filme filme[]
}
